@{
    ViewData["Title"] = "Gummi Kingdom";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<GummiKing.Models.Product>

<div class="category-products container">
    <div class="row">
    @foreach(var product in Model)
    {
        <ul class="gummi-list">
                <div class="col-md-4">
                    <li>
                        <a href="@Url.Action("Details", "Products", new { id = product.ProductId })" >
                            <div class="gummi-image">
                                <img src="@product.ImageUrl" />
                            </div>
                            <div class="gummi-name">
                                <p>@product.Name</p>
                            </div>
                            <div class="gummi-country">
                                <p>Imported from @product.Country.Name</p>
                            </div>
                        </a>
                    </li>

                </div>
        </ul>
    }
    </div>
</div>
